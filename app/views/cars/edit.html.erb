<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="well">
        <h2 class="text-center">Edit Listing</h2>

        <%= form_for @car, {:controller => "car", :action => "update"} do |f| %>

        	<div class="form-group">
						<%= f.label :category %>
						<%= f.select :category, ['Hatchback', 'Sedan', 'Coupe', 'Minivan', 'SUV', 'Truck'], {}, class: 'form-control' %>
					</div>

        	<div class="form-group">
						<%= f.label :year %>
						<%= f.text_field :year, class: 'form-control' %>
					</div>

					 <div class="form-group">
						<%= f.label :make %>
						<%= f.text_field :make, class: 'form-control' %>
					</div>

					<div class="form-group">
						<%= f.label :model %>
						<%= f.text_field :model, class: 'form-control' %>
					</div>

					<div class="form-group">
						<%= f.label :miles %>
						<%= f.text_field :miles, class: 'form-control' %>
					</div>

					<div class="form-group">
						<%= f.label :transmission %>
						<%= f.select :transmission, ['Automatic', 'Manual'], {}, class: 'form-control' %>
					</div>

					<div class="form-group">
						<%= f.label :price %>
						<%= f.text_field :price, class: 'form-control' %>
					</div>

					<div class="form-group">
						<%= f.label :description %>
						<%= f.text_area :description, class: 'form-control' %>
					</div>

					<div class="form-group">
						<%= f.label :image %>
						<%= f.file_field :image, class: 'form-control' %>
					</div>

					<div class="form-group">
    				<%= f.submit "Update Listing", class: 'btn btn-primary' %>
  				</div>

				<% end %>

      </div>
    </div>
  </div>
</div>